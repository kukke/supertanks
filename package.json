{
  "name": "supertanks",
  "version": "0.0.1",
  "description": "A turn based hot-seat multiplayer game",
  "main": "index.js",
  "license": "tbd",
  "scripts": {
    "start": "./node_modules/.bin/http-server -s -o ./dist",
    "startwatch": "(./node_modules/.bin/http-server -s -o ./dist &) && (copy-and-watch --watch src/*.{html,ts} dist/ &) && tsc -p . --watch",
    "build": "tsc -p ."
  },
  "devDependencies": {
    "copy-and-watch": "^0.1.6",
    "http-server": "^14.0.0",
    "typescript": "^4.5.4"
  }
}
